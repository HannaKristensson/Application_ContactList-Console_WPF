<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <!-- Topbar background -->
    <Style x:Key="Topbarbgd" TargetType="Border">
        <Setter Property="Background" Value="#8cb6b5" />
        
    </Style>

    <!-- Main background
    <Style x:Key="Mainbgd" TargetType="Border">
        <Setter Property="Background" Value="#585559" />
    </Style> -->

    <Style x:Key="Mainbgd" TargetType="Border">
        <Setter Property="Background" Value="#FAFAFA" />
    </Style>
    
    <!-- Box background -->
    <Style x:Key="BoxBgd" TargetType="Border">
        <Setter Property="Background" Value="#B0BFBE" />
        <Setter Property="BorderBrush" Value="#878787" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />

<Window x:Class="WPF_MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
        xmlns:views="clr-namespace:WPF_MainApp.Views"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:WPF_MainApp"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Style="{StaticResource MainText}"
        Title="MainWindow" Height="600" Width="800">
    <Border Background="#454346" CornerRadius="25">
        <Grid Margin="15,0,0,15" HorizontalAlignment="Left" Width="770">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" x:Name="TopBar" Background="Transparent" MouseDown="TopBar_MouseDown">
                <Button Style="{StaticResource ExitButton}"
                        Click="ExitButton_Click"/>
            </Grid>

            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                    <views:HomeView/>
                </DataTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:ContactsViewModel}">
                    <views:ContactsView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:AddContactsViewModel}">
                        <views:AddContactView/>
                </DataTemplate>           
            </ContentControl.Resources>
        </ContentControl>

        </Grid>
    </Border>
</Window>

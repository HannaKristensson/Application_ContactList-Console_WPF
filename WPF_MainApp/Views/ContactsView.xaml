<UserControl x:Class="WPF_MainApp.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MainApp.Views"
             
             xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
             xmlns:models="clr-namespace:Buisness.Models;assembly=Buisness"
             d:DataContext="{d:DesignInstance Type=viewmodels:ContactsViewModel}"
             
             mc:Ignorable="d" 
            d:DesignHeight="535" d:DesignWidth="770">
    <Border Background="#585659" CornerRadius="0 0 20 20">
        <Grid Margin="50 10 50 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                    Text="Contact List"
                    Style="{StaticResource HeadlineText}"
             />

            <ListView Background="#8cb6b5" Grid.Row="1" ItemsSource="{Binding Contacts}" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="models:ContactModel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding FirstName}"/>
                                <TextBlock Text="{Binding Email}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal"></StackPanel>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2"
              Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" 
                        Command="{Binding HomeCommand}"
                        Content="CANCEL" 
                        Style="{StaticResource MainButton}" 
                        Margin="5 0 0 0"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>

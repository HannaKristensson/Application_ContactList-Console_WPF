<UserControl x:Class="WPF_MainApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MainApp.Views"
             
             xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             
             Background="Transparent"
             mc:Ignorable="d" 
             Style="{StaticResource DefaultText}"
             d:DesignHeight="550" d:DesignWidth="800">
    <Border Style="{StaticResource Mainbgd}" CornerRadius="0 0 5 5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="60 15" Background="#575759" >
              <TextBlock Style="{StaticResource TitleText}" >CONTACTLIST CREATOR</TextBlock>
                <TextBlock TextAlignment="Center" FontSize="16">
                    Welcome here! Here you can create and edit your very own contact list with an</TextBlock>
                <TextBlock TextAlignment="Center" FontSize="16">
                    unlimited number of contacts. Start exploring now!</TextBlock>
            </StackPanel>
            

            <Grid Grid.Row="1" Margin="10" VerticalAlignment="Bottom" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Style="{StaticResource MainButton}"
                        Command="{Binding AddNewContactCommand}"
                        Content="ADD CONTACT" 
                        Margin="0 0 5 0" />
                <Button Grid.Column="1"
                        Style="{StaticResource MainButton}"
                        Command="{Binding ViewContactsCommand}"
                        Content="VIEW CONTACTS"
                        Margin="5 0 5 0" />
                <Button Grid.Column="2" 
                        Style="{StaticResource MainButton}" 
                        Content="EDIT CONTACT" 
                        Margin="5 0 0 0" />
            </Grid>


            <StackPanel Grid.Row="2" Grid.ColumnSpan="100" VerticalAlignment="Bottom" Margin="0 0 0 10" >
                <Image Width="780"  Source="../Resourses/Images/home2.jpg" HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="WPF_MainApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MainApp.Views"
             
             xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             
             Background="Transparent"
             mc:Ignorable="d" 
             Style="{StaticResource MainText}"
             d:DesignHeight="535" d:DesignWidth="770">
    <Border Background="#585659" CornerRadius="0 0 20 20">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource TitleText}">Contact List</TextBlock>

            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Style="{StaticResource MainButton}" 
                        Command="{Binding AddNewContactCommand}"
                        Content="ADD CONTACT" />
                <Button Grid.Column="1"
                        Style="{StaticResource MainButton}"
                        Command="{Binding ViewContactsCommand}"
                        Content="View Contacts"/>
                <Button Grid.Column="2" Style="{StaticResource MainButton}" Content="Edit Contact" />
            </Grid>


            <StackPanel Grid.Row="2" Grid.ColumnSpan="100" VerticalAlignment="Bottom" >

                <!--  <TextBlock Style="{StaticResource TitleText}" Text="hej hejh jehjeh ejhejeh e"/> -->
                <Image Width="770"  Source="../Resourses/Images/home.jpg" HorizontalAlignment="Center" />
            </StackPanel>

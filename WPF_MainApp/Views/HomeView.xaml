<UserControl x:Class="WPF_MainApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MainApp.Views"
             
             xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             
             Background="#585659"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Title}"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
        <Button  Padding="8" Content="Add new Contact" Command="{Binding AddNewContactCommand}"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Padding="8" Content="View Contacts" Command="{Binding ViewContactsCommand}"/>
        </StackPanel>

        
    </Grid>
</UserControl>

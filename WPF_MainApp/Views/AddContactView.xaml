<UserControl x:Class="WPF_MainApp.Views.AddContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MainApp.Views"
             mc:Ignorable="d" 
             
             xmlns:viewmodels="clr-namespace:WPF_MainApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:AddContactsViewModel}"
             
            d:DesignHeight="535" d:DesignWidth="770">
    <Border Background="#585659" CornerRadius="0 0 20 20">
        <Grid Margin="50 10 50 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="{Binding HeadLine, FallbackValue=Add Contact to List}"
                       Style="{StaticResource HeadlineText}"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Title"/>
                <TextBox />
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                        Command="{Binding AddCommand}"
                        Content="+ SAVE CONTACT" Style="{StaticResource StandardButton}" 
                        Margin="0 0 5 0"/>
                <Button Grid.Column="1" 
                        Command="{Binding CancelCommand}"
                        Content="CANCEL" 
                        Style="{StaticResource CancelButton}" 
                        Margin="5 0 0 0"/>
            </Grid>



        </Grid>
    </Border>
</UserControl>
